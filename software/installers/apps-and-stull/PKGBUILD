pkgrel=1
pkgdesc='This is what I use after a fresh xorgless arch install'
arch=(any)
license=('GPL')
provides=("${pkgname}")

prepare() {
	echo 'Make sure to run the pre/post installation scripts!!!!!'
	echo 'Press enter to continue'
	read
}

